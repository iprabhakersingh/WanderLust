<% layout("/layouts/boilerplate") %>
<div class="row mt-3">
<div class="col-8 offset-2">
    <h3>Edit your listing</h3>
    <form method="POST" action="/listings/<%=listing._id %>?_method=PUT" 
        novalidate 
        class="needs-validation"
        enctype = "multipart/form-data"
        >
        <div class="mb-3">
        <lable for="title" class="form-label">Title</lable>
        <input name="listing[title]" 
        value="<%= listing.title%>" 
        type="text" 
        class="form-control"
        required
        />
        <div class="valid-feedback">Title looks good</div>
        </div>
        <div class="mb-3">
        <label for="description" class="form-label">Description</label>
        <textarea id="description" name="listing[description]" class="form-control" rows="5"><%= listing.description %></textarea>
        <button type="button" id="aiImproveBtn" class="btn btn-outline-dark btn-sm mt-2">
             âœ¨ Improve with AI
        </button>
        <div class="invalid-feedback">Please enter a short description</div>
        </div>
        <div class="mb-3">
            Original Listing Image <br/>
            <img src="<%=originalImageUrl%>" style="width: 300px; height: 200px; object-fit: cover; border-radius: 8px;"/>
        </div>
        <div class="mb-3">
        <lable for="image" class="form-label">Upload New Image</lable>
        <input name="listing[image]" 
        type="file" 
        class="form-control"
        />
        </div>
        <div class="row">
        <div class="mb-3 col-md-4">
        <lable for="price" class="form-label">Price</lable>
        <input name="listing[price]" 
        value="<%= listing.price%>" 
        type="number" 
        class="form-control"
        required>
         <div class="invalid-feedback">Please enter valid price</div>
        </div>
        <div class="mb-3 col-md-8">
        <lable for="country" class="form-label">Country</lable>
        <input name="listing[country]" 
        value="<%= listing.country%>" 
        type="text" 
        class="form-control"
        required>
        <div class="invalid-feedback">Please enter the valid country</div>
        </div>
        </div>
        <div class="row">
        <div class="mb-3 col-md-6">
        <lable for="location" class="form-label">Location</lable>
        <input name="listing[location]" 
        value="<%= listing.location%>" 
        type="text" 
        class="form-control"
        required>
        <div class="invalid-feedback">Please enter the valid location</div>
        </div> 
        <div class="mb-3 col-md-6">
            <lable for="category" class="form-label">Choose your listing category</lable>
            <select id="category" name="listing[category]" class="form-control"  required>
                <option value="<%=listing.category%>"><%=listing.category%></option>
                <option value="Trending">Trending</option>
                <option value="Rooms">Rooms</option>
                <option value="Iconic Cities">Iconic Cities</option>
                <option value="Mountains">Mountains</option>
                <option value="Castles">Castles</option>
                <option value="Amazing Pools">Amazing Pools</option>
                <option value="Camping">Camping</option>
                <option value="Farms">Farms</option>
                <option value="Arctic">Arctic</option>
                <option value="Domes">Domes</option>
                <option value="Boats">Boats</option>
                </select>
            </div>
        </div>
        <button class="btn btn-dark edit-btn mt-3">Edit</button>
        <br/><br/>
    </form>
    </div>
</div>
