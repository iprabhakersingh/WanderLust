    <div id="filters">
    <div class="filter">
        <a href="/listings/filter/Trending"><i class="fa-solid fa-fire"></i>
            <p>Trending</p>
        </a>
    </div>
    <div class="filter">
        <a href="/listings/filter/Rooms"><i class="fa-solid fa-bed"></i>
            <p>Rooms</p>
        </a>
    </div>
    <div class="filter">
        <a href="/listings/filter/Iconic Cities"><i class="fa-solid fa-mountain-city"></i>
            <p>Iconic Cities</p>
        </a>
    </div>
    <div class="filter">
        <a href="/listings/filter/Mountains"><i class="fa-solid fa-mountain"></i>
            <p>Mountains</p>
        </a>
    </div>
    <div class="filter">
        <a href="/listings/filter/Castles"><i class="fa-brands fa-fort-awesome"></i>
            <p>Castles</p>
        </a>
    </div>
    <div class="filter">
        <a href="/listings/filter/Amazing Pools"><i class="fa-solid fa-person-swimming"></i>
            <p>Amazing Pools</p>
        </a>
    </div>
    <div class="filter">
        <a href="/listings/filter/Camping"><i class="fa-solid fa-campground"></i>
            <p>Camping</p>
        </a>
    </div>
    <div class="filter">
        <a href="/listings/filter/Farms"><i class="fa-solid fa-cow"></i>
            <p>Farms</p>
        </a>
    </div>
    <div class="filter">
        <a href="/listings/filter/Arctic"><i class="fa-solid fa-snowflake"></i>
            <p>Arctic</p>
        </a>
    </div>
    <div class="filter">
        <a href="/listings/filter/Domes"><i class="fa-solid fa-igloo"></i>
            <p>Domes</p>
        </a>
    </div>
    <div class="filter">
        <a href="/listings/filter/Boats"><i class="fa-solid fa-ship"></i>
            <p>Boats</p>
        </a>
      </div>
      <div class="switch-toggle">
        <div class="form-check-reverse form-switch">
            <input class="form-check-input" type="checkbox" role="switch" id="switchCheckDefault">
            <label class="form-check-label" for="switchCheckDefault">Display total after taxes</label>
        </div>
    </div>
</div>
<div class="row row-cols-lg-3 row-cols-md-2 row-cols-sm-1 mt-3">
<%for (let listing of allListings) {%>
    <a href="/listings/<%=listing._id%>" class="listing-link">
    <div class="card col listing-card">
<!-- ⚠️ SUSPICIOUS BADGE -->
            <% if (listing.isSuspicious) { %>
                <span 
                  class="badge bg-warning text-dark position-absolute"
                  style="top: 10px; left: 10px; z-index: 10;"
                >
                  ⚠️ Suspicious
                </span>
            <% } %>
  <img
   src="<%= listing.image.url%>" 
   class="card-img-top" 
   alt="listing_image" 
   style="height: 20rem;"
   />
  <div class="card-img-overlay"></div>
  <div class="card-body">
    <p class="card-text">
        <b><%=listing.title%></b><br/>
        &#8377;<%= listing.price ? listing.price.toLocaleString("en-IN") : "N/A"%> / night
        <i class="tax-info"> &nbsp; &nbsp; +18% GST</i>
    </p>
  </div>
</div>
</a>
<%}%>
</div>

<script src="/js/toggler.js"></script>




