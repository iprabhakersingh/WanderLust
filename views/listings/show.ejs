<% layout("/layouts/boilerplate") %>

<script>
    const mapToken = "<%= process.env.MAP_TOKEN %>";
    const listing = JSON.parse(
        atob("<%= Buffer.from(JSON.stringify(listing)).toString('base64') %>")
    );
</script>

<div class="row mt-3">

    <!-- TITLE -->
    <div class="col-8 offset-3">
        <h3><%= listing.title %></h3>
    </div>

    <!-- ⚠️ SUSPICIOUS LISTING WARNING -->
    <% if (listing.isSuspicious) { %>
        <div class="col-6 offset-3">
            <div class="alert alert-warning mt-2">
                <strong>⚠️ Suspicious Listing</strong>
                <p class="mb-1">
                    This listing has been flagged for the following reasons:
                </p>
                <ul class="mb-0">
                    <% listing.suspiciousReasons.forEach(reason => { %>
                        <li><%= reason %></li>
                    <% }) %>
                </ul>
            </div>
        </div>
    <% } %>

    <!-- LISTING CARD -->
    <div class="card col-6 offset-3 show-card listing-card">
        <img 
            src="<%= listing.image.url %>" 
            class="card-img-top show-img" 
            alt="listing_image"
        >
        <div class="card-body">
            <p class="card-text">
                Owned by <i><b><%= listing.owner.username %></b></i>
            </p>
            <p class="card-text">
                Description :-<br>
                <%= listing.description %>
            </p>
            <p class="card-text">
                Category :-&nbsp;&nbsp;<%= listing.category %>
            </p>
            <p class="card-text">
                Price :-&nbsp;&nbsp;
                &#8377;<%= listing.price ? listing.price.toLocaleString("en-IN") : "N/A" %>
            </p>
            <p class="card-text">
                Location :-&nbsp;&nbsp;<%= listing.location %>
            </p>
            <p class="card-text">
                Country :-&nbsp;&nbsp;<%= listing.country %>
            </p>
        </div>
    </div>

    <br/>

    <!-- EDIT / DELETE BUTTONS -->
    <% if (currUser && listing.owner._id.equals(currUser._id)) { %>
        <div class="btns">
            <a 
                href="/listings/<%= listing._id %>/edit" 
                class="btn btn-dark col-1 offset-3 edit-btn"
            >
                Edit
            </a>
            <form 
                method="POST" 
                action="/listings/<%= listing._id %>?_method=DELETE"
            >
                <button class="btn btn-dark offset-5">
                    Delete
                </button>
            </form>
        </div>
    <% } %>

    <!-- REVIEWS SECTION -->
    <div class="col-8 offset-3 mb-3">
        <% if (currUser) { %>
            <hr/>
            <h4>Leave a Review</h4>

            <form 
                action="/listings/<%= listing.id %>/reviews" 
                method="POST" 
                novalidate 
                class="needs-validation"
            >
                <div class="mb-3 mt-3">
                    <label class="form-label">Rating</label>
                    <fieldset class="starability-slot">
                        <input type="radio" class="input-no-rate" name="review[rating]" value="1" checked />
                        <input type="radio" id="rate1" name="review[rating]" value="1" />
                        <label for="rate1">1 star</label>
                        <input type="radio" id="rate2" name="review[rating]" value="2" />
                        <label for="rate2">2 stars</label>
                        <input type="radio" id="rate3" name="review[rating]" value="3" />
                        <label for="rate3">3 stars</label>
                        <input type="radio" id="rate4" name="review[rating]" value="4" />
                        <label for="rate4">4 stars</label>
                        <input type="radio" id="rate5" name="review[rating]" value="5" />
                        <label for="rate5">5 stars</label>
                    </fieldset>
                </div>

                <div class="mb-3 mt-3">
                    <label class="form-label">Comment</label>
                    <textarea 
                        name="review[comment]" 
                        class="form-control" 
                        rows="5" 
                        required
                    ></textarea>
                    <div class="invalid-feedback">
                        Please add some comments for review
                    </div>
                </div>

                <button class="btn btn-outline-dark">
                    Submit
                </button>
            </form>
            <hr/>
        <% } %>

        <% if (listing.reviews.length > 0) { %>
            <div class="row">
                <p><b>All reviews</b></p>

                <% for (review of listing.reviews) { %>
                    <div class="card col-5 ms-3 mb-3">
                        <div class="card-body">
                            <h5 class="card-title">
                                @<%= review.author.username %>
                            </h5>
                            <p 
                                class="starability-result card-text" 
                                data-rating="<%= review.rating %>"
                            ></p>
                            <p class="card-text">
                                <%= review.comment %>
                            </p>
                        </div>

                        <% if (currUser && listing.owner._id.equals(currUser._id)) { %>
                            <form 
                                class="mb-3" 
                                method="POST" 
                                action="/listings/<%= listing._id %>/reviews/<%= review._id %>?_method=DELETE"
                            >
                                <button class="btn btn-sm btn-dark">
                                    Delete
                                </button>
                            </form>
                        <% } %>
                    </div>
                <% } %>
            </div>
        <% } %>
    </div>

    <!-- MAP -->
    <div class="col-8 offset-3 mb-3">
        <h3>Where you'll be</h3>
        <div id="map"></div>
    </div>

</div>

<br/>

<script src="/js/map.js"></script>
