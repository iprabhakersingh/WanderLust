<% layout("/layouts/boilerplate") %>
<div class="row mt-3">
    <div class="col-8 offset-2" >
<h3>Create a new listing</h3>
    <form method="POST" action="/listings" novalidate class="needs-validation" enctype="multipart/form-data">
        <div class="mb-3">
        <lable for="title" class="form-label">Title</lable>
        <input name="listing[title]" 
        placeholder="Add a catchy title" 
        type="text" 
        class="form-control"
        required
        />
        <div class="valid-feedback">Title looks good</div>
        </div>
        <div class="mb-3">
        <label for="description" class="form-label">Description</label>
        <textarea id="description" name="listing[description]" class="form-control"required></textarea>
        <button type="button" id="aiImproveBtn" class="btn btn-outline-dark btn-sm mt-2">âœ¨ Improve with AI</button>
        <div class="invalid-feedback">Please enter a short description</div>
        </div>
        <div class="mb-3">
        <lable for="image" class="form-label">Upload Image</lable>
        <input name="listing[image]" 
        type="file"
        class="form-control"
        required
        />
        </div>
        <div class="row">
        <div class="mb-3 col-md-4">
        <lable for="price" class="form-label">Price</lable>
        <input name="listing[price]" 
        placeholder="enter price" 
        class="form-control" 
        required/>
        <div class="invalid-feedback">Please enter a Valid Price</div>
        </div>
        <div class="mb-3 col-md-8 ">
        <lable for="country" class="form-label">Country</lable>
        <input name="listing[country]" 
        placeholder="enter country" 
        type="text" 
        class="form-control" 
        required>
        <div class="invalid-feedback">Please enter the country name</div>
        </div>
        </div>
        <div class="row">
        <div class="mb-3 col-md-6">
        <lable for="location" class="form-label">Location</lable>
        <input name="listing[location]" 
        placeholder="enter location" 
        type="text" 
        class="form-control" 
        required/>
        <div class="invalid-feedback">Please enter a Valid location</div> 
        </div>
        <div class="mb-3 col-md-6">
            <lable for="category" class="form-label">Choose your listing category</lable>
                <select class="form-control" name="listing[category]" id="category" required>
                    <option value="Trending">Trending</option>
                    <option value="Rooms">Rooms</option>
                    <option value="Iconic Cities">Iconic Cities</option>
                    <option value="Mountains">Mountains</option>
                    <option value="Castles">Castles</option>
                    <option value="Amazing Pools">Amazing Pools</option>
                    <option value="Camping">Camping</option>
                    <option value="Farms">Farms</option>
                    <option value="Arctic">Arctic</option>
                    <option value="Domes">Domes</option>
                    <option value="Boats">Boats</option>
                </select>
            </div>
        </div>
        <button class="btn btn-dark add-btn mt-3">Add</button>
        <br/><br/>
    </form>
    </div>
</div>
<script src="/js/aiDescription.js"></script>
